{{this.registerJs('AuthController.loginOrSignup()')}}
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <button type="button" class="modal-close x-close" data-dismiss="modal"><span class="sr-only">Close</span></button>
        <div class="modal-body nopadd">
            <div class="login-page">
                <div class="container">
                    <div class="tabbable tabbable-custom">
                        <ul class="nav nav-tabs nav_tabs_two">
                            <li class="active"><a href="#LoginTab" data-toggle="tab">Login</a></li>
                            {% if not isNetworkClosed %}
                            <li class=""><a href="#SignUpTab" data-toggle="tab">Sign Up</a></li>
                            {% endif %}
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="LoginTab">
                                <div class="row">
                                    <div class="col-md-16 col-sm-16 col-xs-16" id="login-social">
                                        <div class="social-buttons">
                                            <ul class="row">
                                                <li class="facebook"><a href="{{_AppHelper.getSocialFacebookUrl(1)}}"><i class="fa fa-facebook"></i> Login with Facebook</a></li>
                                                <li class="twitter"><a href="{{_AppHelper.getSocialTwitterUrl(1)}}"><i class="fa fa-twitter"></i> Login with Twitter</a></li>
                                                {#
                                                <li class="g-plus"><a href="#"><i class="fa fa-google-plus"></i> Login with Google+</a></li>
                                                <li class="linkedin"><a href="#"><i class="fa fa-linkedin"></i> Login with LinkedIn</a></li>
                                                #}
                                            </ul>
                                        </div>
                                        <!--
                                        <p class="text-center mbt50"><a href="javascript:void(0)" class="txt-link signupBtn">Don't have an account? <span class="green">Sign up here</span></a></p>
                                        -->
                                        <p class="email-login"><span class="seperation">Login with email</span></p>
                                        <div class="WriteAnArticleForm">
                                            <form name="loginForm" id="loginForm" class="form-horizontal" action="{{_AppHelper.getLoginUrl()}}" method="post">
                                                <input type="hidden" name="_csrf" value="{{_AppHelper.getCsrfToken()}}" />
                                                <div class="controls-full">
                                                    {{_AppForm.input({type:'text', name: 'username', value: form.username, class: 'form-control', placeholder: 'Username or email'}) | raw }}
                                                </div>
                                                <div class="controls-full">
                                                    {{_AppForm.input({type:'password', name: 'password', value: form.password, class: 'form-control', placeholder: 'Password'}) | raw }}
                                                </div>
                                                <div class="button-set">
                                                    <label><input type="checkbox" id="RemeberMe" name="RemeberMe" value="RemeberMe"><span><!-- fake checkbox --></span>Remeber Me</label>
                                                    <div class="right-section">
                                                        <a href="{{_AppHelper.getForgotPasswordUrl()}}" class="forget"><span class="green">Forgot Password?</span></a>
                                                        {{_AppForm.button({type:'submit', name: 'submitLoginForm', class: 'button green button-large'}) | raw }}
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if not isNetworkClosed %}
                            <div class="tab-pane fade" id="SignUpTab">
                                <div class="row">
                                    <div class="col-md-16 col-sm-16 col-xs-16" id="signup-social">

                                        <p class="email-login"><span class="seperation">Let’s get this party started!</span></p>

                                        <div class="social-buttons">
                                            <ul class="row">
                                                <li class="facebook"><a href="{{_AppHelper.getSocialFacebookUrl()}}"><i class="fa fa-facebook"></i> Sign up with Facebook</a></li>
                                                <li class="twitter"><a href="{{_AppHelper.getSocialTwitterUrl()}}"><i class="fa fa-twitter"></i> Sign up with Twitter</a></li>
                                                {#
                                                <li class="g-plus"><a href="#"><i class="fa fa-google-plus"></i> Sign up with Google+</a></li>
                                                <li class="linkedin"><a href="#"><i class="fa fa-linkedin"></i> Sign up with LinkedIn</a></li>
                                                #}
                                            </ul>
                                        </div>
                                        <!--
                                        <p class="text-center mbt50"><a href="javascript:void(0)" class="txt-link loginBtn">Already have an account? <span class="green">Login here</span></a></p>
                                        -->
                                        <p class="email-login"><span class="seperation">Sign up with email</span></p>
                                        <div class="WriteAnArticleForm">
                                            <form name="signupForm" id="signupForm" class="form-horizontal" action="{{_AppHelper.getSignupUrl()}}" method="post">
                                                <input type="hidden" name="_csrf" value="{{_AppHelper.getCsrfToken()}}" />

                                                <div class="controls-lt">
                                                    {{_AppForm.input({name: 'firstname', value: form.firstname, class: 'form-control', placeholder: 'Firstname'}) | raw }}
                                                </div>
                                                <div class="controls-rt">
                                                    {{_AppForm.input({name: 'lastname', value: form.lastname, class: 'form-control', placeholder: 'Lastname'}) | raw }}

                                                </div>
                                                <div class="controls-full">
                                                    {{_AppForm.input({name: 'email', value: form.email, class: 'form-control', placeholder: 'Email'}) | raw }}
                                                </div>
                                                <div class="controls-full">
                                                    {{_AppForm.input({type : 'password', name: 'password', class: 'form-control', placeholder: 'Password'}) | raw }}
                                                </div>
                                                <div class="controls-full">
                                                    {{_AppForm.input({type : 'password', name: 'verifypassword', class: 'form-control', placeholder: 'Verify Password'}) | raw }}
                                                </div>
                                                <div class="controls-full">
                                                    {{_AppForm.input({ name: 'username', class: 'form-control', placeholder: 'Username'}) | raw }}
                                                </div>
                                                <div class="controls-full captcha">
                                                    {% if _Network.getCaptchaSiteKey() is defined and _Network.getCaptchaSiteKey() is not empty %}
                                                        <div class="g-recaptcha" data-sitekey="{{_Network.getCaptchaSiteKey()}}" style="padding-bottom:30px;"></div>
                                                    {% else %} 
                                                        <span class='help-block'>This is how youâ€™ll be known on {{_Network.getNetworkTitle()}}</span>
                                                        {{_AppForm.captcha({class: 'form-control', placeholder: 'Please enter tha captcha text above'}) | raw }}
                                                    {% endif %}
                                                </div>
                                                <div class="button-set">
                                                    <label class="hide"><input type="checkbox" id="AcceptTerms" name="AcceptTerms" value="1"><span></span>I agree to the terms & conditions</label>
                                                </div>
                                                {{_AppForm.button({type:'submit', name: 'submitSignupForm', class: 'button green button-large'}) | raw }}
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
