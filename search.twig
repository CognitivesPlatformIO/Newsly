  <div class="section__content {% if not articles[12] %}hide{%endif%}">
    <div class="row">
        
        {% for i in 12..19 %}
            {% if articles[i] %}
                {{this.render('partials/_single-article.twig', {article: articles[i], containerClass: 'col-quarter', cardClass : 'card__news card--local'}) | raw}}
            {% endif %}
        {% endfor %}
        
    </div>
  </div>
        
    <div class="section__content {% if articles|length < limit %}hide{%endif%}">
        <div class="row ajaxArticles" data-offset="{{limit}}"></div>
    </div>        
    {% if articles|length >= limit %}
    <button 
        class="sub_header__button loadMoreArticles" style="border: none; color: #FFF; margin-left: 43%; cursor: pointer;"
            >Load More</button>
    {% endif %}
{% else %}
    <p class="nodata text-center">No search result found.</p>
{% endif %}
</div>
                
        
