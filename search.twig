{{ set(this, 'title', 'Search - ' ~ search) }}

{{this.registerJs("SearchController.listing();")}}

{% set limit = 20 %}
{% set articles = _Search.searchArticles({'limit': limit, 'offset': 0, 'search': search}) %}

<div class="section section--local">
{% if articles|length > 0 %}
  <div class="section__content">
    <div class="row">
      
            {% if articles|length > 0 %}
                {{this.render('partials/_single-article.twig', {article: articles[0], containerClass: 'col-full', cardClass : 'card__news card--rural'}) | raw}}
            {% endif %}
        
            {% for i in 1..4 %}
                {% if articles[i] %}
                    {{this.render('partials/_single-article.twig', {article: articles[i], containerClass: 'col-quarter', cardClass : 'card__news card--local'}) | raw}}
                {% endif %}
            {% endfor %}
        
    </div>
  </div>
