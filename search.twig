    </div>
  </div> -->
  <div class="section__content {% if not articles[5] %}hide{%endif%}">
    <div class="row">
        
        {% if articles[5] %}
            {{this.render('partials/_single-article.twig', {article: articles[5], containerClass: 'col-two-thirds', cardClass : 'card__news card--rural'}) | raw}}
        {% endif %}

        {% for i in 6..8 %}
            {% if articles[i] %}
                {{this.render('partials/_single-article.twig', {article: articles[i], containerClass: 'col-third-short', cardClass : 'card__news card--local'}) | raw}}
            {% endif %}
        {% endfor %}
        
        {% for i in 9..11 %}
            {% if articles[i] %}
                {{this.render('partials/_single-article.twig', {article: articles[i], containerClass: 'col-third', cardClass : 'card__news card--local'}) | raw}}
            {% endif %}
        {% endfor %}
        
    </div>
  </div>
